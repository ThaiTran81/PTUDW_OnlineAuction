{{#section 'js'}}
	<link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
	<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
	<script src="/public/js/readmore.js"></script>
	<script>
		$(function () {
			$("#datepicker").datepicker();
			$("#datepicker").datepicker("option", "dateFormat", "dd/mm/yy");
		});
		$('#upgrade-btn').click(function (){
            let $this = $(this);
            const uid  = $this.attr('data-uid');
			axios({
				method: 'post',
				url: '/account/upgrade',
				data: {
					uid
				}
			}).then(function (res){
				const status = res.data;
				if(status==='existed'){
					$("<div class='alert alert-success row position-absolute w-50'role='alert' style='z-index: 1000; left: 20px;top:80px;'> Tài khoản đang nằm trong danh sách chờ duyệt </div>").insertBefore('.container-fluid').delay(2000).fadeOut(2000);
				}
				else if(status==='success'){
					$("<div class='alert alert-success row position-absolute w-50'role='alert' style='z-index: 1000; left: 20px;top:80px;'> Đã thêm tài khoản vào danh sách chờ duyệt</div>").insertBefore('.container-fluid').delay(2000).fadeOut(2000);
				}
				else{
					$("<div class='alert alert-danger row position-absolute w-50'role='alert' style='z-index: 1000; left: 20px;top:80px;'> Có lỗi xảy ra, vui lòng thử lại sau </div>").insertBefore('.container-fluid').delay(2000).fadeOut(2000);
				}
			}).catch(function (){
				$("<div class='alert alert-danger row position-absolute w-50'role='alert' style='z-index: 1000; left: 20px;top:80px;'> Có lỗi xảy ra, vui lòng thử lại sau </div>").insertBefore('.container-fluid').delay(2000).fadeOut(2000);
			})
		})
	</script>
