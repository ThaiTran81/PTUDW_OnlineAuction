{{#section 'css'}}
	<link rel="stylesheet" href="/public/css/category.css">
{{/section}}
{{#section 'js'}}
	<script src="/public/js/category.js"></script>
{{/section}}
<div class="category">
	<div class="row">
		<div class="category-fiter col-md-3">
			<div class="filter">
				<div class="filter-title">
					Lọc theo giá
				</div>
				<div class="filter-content justify-content-center">
					<div class="price-input">
						<div class="field">
							<span>Thấp nhất</span>
							<input type="number" class="input-min" value="2500">
						</div>
						<div class="separator">-</div>
						<div class="field">
							<span>Cao nhất</span>
							<input type="number" class="input-max" value="7500">
						</div>
					</div>
					<div class="slider">
						<div class="progress"></div>
					</div>
					<div class="range-input">
						<input type="range" class="range-min" min="0" max="10000" value="2500" step="100">
						<input type="range" class="range-max" min="0" max="10000" value="7500" step="100">
					</div>
				</div>
			</div>
			<div class="filter">
				<div class="filter-title">
					Loại sản phẩm
				</div>
				<div class="filter-content">
					<ul class="checklist">
						{{#each this.types}}
							<li>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" value="" id="type1">
									<label class="form-check-label" for="type1">
										{{this.typName}}
									</label>
								</div>
							</li>
						{{/each}}
					</ul>
				</div>
			</div>
			<div class="filter">
				<div class="filter-title">
					Kết thúc trong khoảng
				</div>
				<div class="filter-content">
					<ul class="checklist">
						<li>
							<div class="form-check">
								<input class="form-check-input" type="checkbox" value="" id="time1">
								<label class="form-check-label" for="time1">
									1 Ngày
								</label>
							</div>
						</li>
						<li>
							<div class="form-check">
								<input class="form-check-input" type="checkbox" value="" id="time1">
								<label class="form-check-label" for="time1">
									1 Tuần
								</label>
							</div>
						</li>
						<li>
							<div class="form-check">
								<input class="form-check-input" type="checkbox" value="" id="time2">
								<label class="form-check-label" for="time2">
									1 Tháng
								</label>
							</div>
						</li>
						<li>
							<div class="form-check">
								<input class="form-check-input" type="checkbox" value="" id="time3">
								<label class="form-check-label" for="time3">
									3 Tháng
								</label>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="category-content col-md-9">
			<div class="list-header d-flex justify-content-between mb-4">
				<div class="sort">
					<div class="sort-title">
						Sort by:
					</div>
					<select name="sort-by" class="select-bar" id="">
						<option value="all">All</option>
						<option value="name">Name</option>
						<option value="date">Date</option>
					</select>
				</div>
				<form action="" class="search">
					<input type="text" placeholder="Item Name">
					<button type="submit">
						<ion-icon name="search-outline"></ion-icon>
					</button>
				</form>
			</div>
			<div class="row justify-content-center">
				{{#if (equal this.empty false)}}
					{{#each this.products}}
						<div class="col-md-4">
							<div class="product">
								<a href="" class="product-item-link">
									<img src="/public/images/items/{{proID}}/thumb.png"
										 alt=""
										 class="product-img">
									<h5>{{proName}}</h5>
								</a>
								<div class="product-bid-area">
									<div class="bid">
										<div class="product-icon-area">
											<i class="fa fa-gavel green-text" aria-hidden="true"></i>
										</div>
										<div class="product-text-area">
											<p class="green-text">khởi điểm</p>
											<p>{{format_number curPrice}}</p>
										</div>
									</div>
									<div class="buy">
										<div class="product-icon-area">
											<i class="fa fa-money text-danger" aria-hidden="true"></i>
										</div>
										<div class="product-text-area">
											<p class="text-danger">Mua ngay</p>
											<p>{{format_number buyNow}}</p>
										</div>
									</div>
								</div>
								<div class="product-time-area">

								</div>
								<div class="row justify-content-center">
									<button type="button" class="btn btn-light submit-btn">Đấu giá</button>
								</div>
							</div>
						</div>
					{{/each}}
				{{/if}}
			</div>

			<ul class="pagination justify-content-center">
				<li>
					<a href="" class="">
						<ion-icon name="arrow-back-outline"></ion-icon>
					</a>
				</li>
				<li>
					<a href="" class="">
						1
					</a>
				</li>
				<li>
					<a href="" class="">
						2
					</a>
				</li>
				<li>
					<a href="" class="">
						3
					</a>
				</li>
				<li>
					<a href="" class="">
						<ion-icon name="arrow-forward-outline"></ion-icon>
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>



